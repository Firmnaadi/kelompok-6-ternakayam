<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F3E0B5"
    tools:context=".EditBarangAyam">

    <TextView
        android:id="@+id/idAyamTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Ayam"
        android:textSize="18sp"
        android:textColor="#FFA500"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/jumlahAyamEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idAyamTextView"
        android:inputType="number"
        android:hint="Masukkan Jumlah Ayam"
        android:backgroundTint="#FFA500"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jumlahAyamEditText"
        android:layout_marginTop="16dp"
        android:text="Update"
        android:backgroundTint="#EEC373"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
